<h2>Create New Figure</h2>

<form method="POST" action="/figures">
 <p> Name:<input type="text" name="figure[name]" id="figure_name"> </p>
 <br>
 <h4>Titles</h4>
  <% Title.all.each do |title| %>
   <p><input <%= title.name %> type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>"></p>
  <%end%>
  
  <h4>Create New Title:</h4>
   <p> <input type="text" name="title[name]" id="title_name"></p>
   
   <h4>Landmarks</h4>
  <% Landmark.all.each do |landmark| %>
   <p><input <%= landmark.name %> type="checkbox" id="landmark_<%= landmark.id %>" name="figure[title_ids][]" value="<%= title.id %>"></p>
  <%end%>
  
  <h4>Create New Title:</h4>
   <p> <input type="text" name="title[name]" id="title_name"></p>
  
</form>

